<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    tools:layout_editor_absoluteX="187dp"
    tools:layout_editor_absoluteY="294dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".orderflow.DetailFragment">


        <TextView
            android:id="@+id/titleLabel"
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            android:gravity="start|center"
            android:text="@string/offer_title"
            android:textColor="@color/darkest_black"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/typeLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/typeLabel"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="16dp"
            android:gravity="start|center"
            android:text="@string/product_type"
            android:textColor="@color/darkest_black"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/manufLabel"
            app:layout_constraintStart_toStartOf="parent" />


        <TextView
            android:id="@+id/manufLabel"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="16dp"
            android:gravity="start|center"
            android:text="@string/manufacturer"
            android:textColor="@color/darkest_black"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/deliveryLabel"
            app:layout_constraintStart_toStartOf="parent" />



        <TextView
            android:id="@+id/deliveryLabel"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="16dp"
            android:gravity="start|center"
            android:text="@string/delivery"
            android:textColor="@color/darkest_black"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/wearLabel"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/locationLabel"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="16dp"
            android:gravity="start|center"
            android:text="@string/location"
            android:textColor="@color/darkest_black"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/weightLabel"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/wearLabel"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="16dp"
            android:gravity="start|center"
            android:text="@string/wear"
            android:textColor="@color/darkest_black"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/amountLabel"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/amountLabel"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="16dp"
            android:gravity="start|center"
            android:text="@string/amount"
            android:textColor="@color/darkest_black"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/locationLabel"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/weightLabel"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="16dp"
            android:gravity="start|center"
            android:text="@string/weight"
            android:textColor="@color/darkest_black"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/heightLabel"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/descriptionLabel"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="16dp"
            android:gravity="start|center"
            android:text="@string/description"
            android:textColor="@color/darkest_black"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/descriptionField"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/blankGridSupoort"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginBottom="16dp"

            android:textColor="@color/darkest_black"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/descriptionField"
            app:layout_constraintStart_toStartOf="@+id/sizeDropdown"
            tools:ignore="DuplicateIds" />


        <Button
            android:id="@+id/offerButton"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/button"
            android:text="@string/offer"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@id/attachedImage2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/titleField"
            android:layout_width="206dp"
            android:layout_height="45dp"
            android:layout_marginStart="40dp"
            android:layout_marginBottom="16dp"
            android:ems="10"
            android:hint="@string/white_dinner_table"
            android:inputType="textPersonName"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/typeDropdown"
            app:layout_constraintStart_toEndOf="@+id/titleLabel" />



        <EditText
            android:id="@+id/manufacturerField"
            android:layout_width="205dp"
            android:layout_height="45dp"
            android:layout_marginBottom="16dp"
            android:ems="10"
            android:hint="@string/iekurs"
            android:inputType="textPersonName"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/deliveryDropdown"
            app:layout_constraintStart_toStartOf="@+id/typeDropdown" />

        <Spinner
            android:id="@+id/typeDropdown"
            android:layout_width="205dp"
            android:layout_height="45dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/border"
            app:layout_constraintBottom_toTopOf="@+id/manufacturerField"
            app:layout_constraintStart_toStartOf="@+id/titleField" />

        <Spinner
            android:id="@+id/deliveryDropdown"
            android:layout_width="205dp"
            android:layout_height="45dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/border"
            app:layout_constraintBottom_toTopOf="@+id/wearDropdown"
            app:layout_constraintStart_toStartOf="@+id/manufacturerField" />

        <Spinner
            android:id="@+id/wearDropdown"
            android:layout_width="205dp"
            android:layout_height="45dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/border"
            app:layout_constraintBottom_toTopOf="@+id/plusButton"
            app:layout_constraintStart_toStartOf="@+id/deliveryDropdown" />

        <TextView
            android:id="@+id/amountNumberText"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/border"

            android:gravity="center|start"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/locationField"
            app:layout_constraintEnd_toStartOf="@+id/plusButton"
            app:layout_constraintStart_toEndOf="@+id/minusButton" />



        <EditText
            android:id="@+id/weightField"
            android:layout_width="205dp"
            android:layout_height="45dp"
            android:layout_marginBottom="16dp"
            android:ems="10"
            android:hint="@string/_15_kg"
            android:inputType="number"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/heightField"
            app:layout_constraintStart_toStartOf="@+id/locationField" />

        <EditText
            android:id="@+id/descriptionField"
            android:layout_width="343dp"
            android:layout_height="100dp"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/border"
            android:ems="10"
            android:gravity="start|top"
            android:hint="@string/hint_text_offer_form"
            android:includeFontPadding="true"
            android:inputType="textMultiLine"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/attachedImagesRV"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/plusButton"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="16dp"
            android:text="@string/plus"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/locationField"
            app:layout_constraintEnd_toEndOf="@+id/wearDropdown" />

        <Button
            android:id="@+id/minusButton"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginBottom="16dp"
            android:text="@string/minus"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/locationField"
            app:layout_constraintStart_toStartOf="@+id/wearDropdown" />


        <ImageView
            android:id="@+id/attachedImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:contentDescription="@string/recently_added_images"
            app:layout_constraintBottom_toTopOf="@+id/imageAmountLabel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:src="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/attachedImage2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:contentDescription="@string/recently_added_images"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            tools:src="@tools:sample/avatars" />

        <Button
            android:id="@+id/browseDeviceButton"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/button"
            android:text="@string/browse_device"
            app:layout_constraintBottom_toTopOf="@+id/offerButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/takePictureButton"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/button"
            android:text="@string/take_picture"
            app:layout_constraintBottom_toTopOf="@+id/browseDeviceButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/imageAmountLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/errorLabel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/attachedImagesRV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@id/attachedImage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />



        <TextView
            android:id="@+id/heightLabel"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="16dp"
            android:text="@string/height_cm"
            android:gravity="start|center"
            android:textColor="@color/darkest_black"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/widthLabel"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/heightField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:ems="10"
            android:hint="@string/_30_cm"
            android:inputType="number"
            app:layout_constraintBottom_toTopOf="@+id/widthField"
            app:layout_constraintStart_toStartOf="@+id/weightField" />

        <TextView
            android:id="@+id/widthLabel"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:gravity="start|center"
            android:textColor="@color/darkest_black"
            android:textSize="16sp"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="16dp"
            android:text="@string/width_cm"
            app:layout_constraintBottom_toTopOf="@+id/lengthLabel"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/lengthLabel"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:gravity="start|center"
            android:textColor="@color/darkest_black"
            android:textSize="16sp"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="16dp"
            android:text="@string/length_cm"
            app:layout_constraintBottom_toTopOf="@+id/materialLabel"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/materialLabel"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:gravity="start|center"
            android:textColor="@color/darkest_black"
            android:textSize="16sp"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="16dp"
            android:text="@string/material"
            app:layout_constraintBottom_toTopOf="@+id/colorLabel"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/colorLabel"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:gravity="start|center"
            android:textColor="@color/darkest_black"
            android:textSize="16sp"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="16dp"
            android:text="@string/color"
            app:layout_constraintBottom_toTopOf="@+id/authorLabel"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/authorLabel"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:gravity="start|center"
            android:textColor="@color/darkest_black"
            android:textSize="16sp"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="16dp"
            android:text="@string/author"
            app:layout_constraintBottom_toTopOf="@+id/yearLabel"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/yearLabel"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:gravity="start|center"
            android:textColor="@color/darkest_black"
            android:textSize="16sp"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="16dp"
            android:text="@string/year"
            app:layout_constraintBottom_toTopOf="@+id/bookTitleLabel"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/bookTitleLabel"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:gravity="start|center"
            android:textColor="@color/darkest_black"
            android:textSize="16sp"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="16dp"
            android:text="@string/book_title"
            app:layout_constraintBottom_toTopOf="@+id/sizeLabel"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/sizeLabel"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:gravity="start|center"
            android:textColor="@color/darkest_black"
            android:textSize="16sp"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="16dp"
            android:text="@string/size"
            app:layout_constraintBottom_toTopOf="@+id/descriptionLabel"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/widthField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:ems="10"
            android:hint="@string/_15_cm"
            android:inputType="number"
            app:layout_constraintBottom_toTopOf="@+id/lengthField"
            app:layout_constraintStart_toStartOf="@+id/heightField" />

        <EditText
            android:id="@+id/lengthField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:ems="10"
            android:inputType="number"
            android:hint="@string/_10_cm"
            app:layout_constraintBottom_toTopOf="@+id/materialField"
            app:layout_constraintStart_toStartOf="@+id/widthField" />

        <EditText
            android:id="@+id/materialField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="@string/wood"
            app:layout_constraintBottom_toTopOf="@+id/colorField"
            app:layout_constraintStart_toStartOf="@+id/lengthField" />

        <EditText
            android:id="@+id/colorField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="@string/white"
            app:layout_constraintBottom_toTopOf="@+id/authorField"
            app:layout_constraintStart_toStartOf="@+id/materialField" />

        <EditText
            android:id="@+id/authorField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="@string/an_lavs_egl_tis"
            app:layout_constraintBottom_toTopOf="@+id/yearField"
            app:layout_constraintStart_toStartOf="@+id/colorField" />

        <EditText
            android:id="@+id/yearField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:ems="10"
            android:inputType="number"
            android:hint="@string/_1992"
            app:layout_constraintBottom_toTopOf="@+id/bookTitleField"
            app:layout_constraintStart_toStartOf="@+id/authorField" />

        <EditText
            android:id="@+id/bookTitleField"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginBottom="16dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="@string/piecas_dienas"
            app:layout_constraintBottom_toTopOf="@+id/sizeDropdown"
            app:layout_constraintStart_toStartOf="@+id/yearField" />

        <Spinner
            android:id="@+id/sizeDropdown"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/border"
            app:layout_constraintBottom_toTopOf="@+id/blankGridSupoort"
            app:layout_constraintStart_toStartOf="@+id/bookTitleField" />

        <EditText
            android:id="@+id/locationField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="@string/rai_a_bulv_ris_19"
            app:layout_constraintBottom_toTopOf="@+id/weightField"
            app:layout_constraintStart_toStartOf="@+id/minusButton" />

        <TextView
            android:id="@+id/errorLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@id/takePictureButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>